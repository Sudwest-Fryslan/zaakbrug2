<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="GetZgwRolTypeByZaakType"
        active="${GetZgwRolTypeByZaakType.Active}"
        description="">

        <Receiver name="GetZgwRolTypeByZaakType">
            <JavaListener name="GetZgwRolTypeByZaakType"/>
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit name="EXIT" state="SUCCESS"/>
                <Exit name="EXCEPTION" state="ERROR"/>
            </Exits>

			<SenderPipe name="GetZgwRolTypeByZaakType" 
                getInputFromFixedValue="&lt;dummy/&gt;">
				<HttpSender 
					name="GetZgwRolTypeByZaakTypeSender" 
					methodType="GET"
					headersParams="Authorization,Accept-Crs"
					url="${zgw.baseurl}${zgw.endpoint.roltype}?zaaktype=$ZaakTypeUrl"
                    timeout="${creeerZaak.timeout}"
				/>
                <Param name="ZaakTypeUrl" sessionKey="ZaakTypeUrl" />
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Authorization" value="Bearer ${JwtToken}"/>
                <Forward name="success" path="JsonToXml" />
			</SenderPipe>

            <JsonPipe name="JsonToXml">
                <Forward name="success" path="EXIT"/>
            </JsonPipe>
        </Pipeline>
    </Adapter>
</Module>