<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../ibisdoc.xsd">
    <Adapter name="ImportFromLocalFS"
        active="${ImportFromLocalFS.Active}"
        description="">

        <Receiver name="ImportFromLocalFS">
            <JavaListener name="ImportFromLocalFS"/>
        </Receiver>

        <Pipeline>
            <LocalFileSystemPipe name="ReadFile" action="read">
				<param name="filename" value="${FilePath}" />
				<forward name="success" path="JsonToXml" />
			</LocalFileSystemPipe>

            <JsonPipe name="JsonToXml">
                <forward name="success" path="FormatXml"/>
            </JsonPipe>

            <XsltPipe name="FormatXml" 
                styleSheetName="CreeerZaak_Lk01/xsl/FormateGlobal.xsl" 
                storeResultInSessionKey="MappingGlobal">
                <forward name="success" path="EXIT"/>
			</XsltPipe>
            
            <Exit path="EXIT" state="success"/>
            <Exit path="Exception" state="error"/>
        </Pipeline>
    </Adapter>
</Module>