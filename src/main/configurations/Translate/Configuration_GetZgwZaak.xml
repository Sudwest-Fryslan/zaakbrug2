<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../ibisdoc.xsd">
    <Adapter name="GetZgwZaak"
        active="${GetZgwZaak.Active}"
        description="">

        <Receiver name="GetZgwZaak">
            <JavaListener name="GetZgwZaak"/>
        </Receiver>

        <Pipeline>   
			<SenderPipe name="GetZgwZaakByIdentificatie" 
                getInputFromFixedValue="&lt;dummy/&gt;">
				<HttpSender 
					name="GetZgwZaakByIdentificatieSender" 
					methodType="GET"
					headersParams="Authorization,Accept-Crs"
					url="${zgw.baseurl}${zgw.endpoint.zaak}?identificatie=$Identificatie"
                    timeout="${creeerZaak.timeout}"
				/>
                <Param name="Identificatie" sessionKey="Identificatie"/>
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Authorization" value="Bearer ${JwtToken}"/>
                <Forward name="success" path="JsonToXml" />
			</SenderPipe>

            <JsonPipe name="JsonToXml">
                <forward name="success" path="RemoveEmptyTags"/>
            </JsonPipe>

            <XsltPipe name="RemoveEmptyTags" 
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_Lk01/xsl/RemoveEmptyTags.xsl" 
                >
                <Forward name="success" path="EXIT"/>
			</XsltPipe>

            <Exit path="EXIT" state="success"/>
            <Exit path="Exception" state="error"/>
        </Pipeline>
    </Adapter>
</Module>