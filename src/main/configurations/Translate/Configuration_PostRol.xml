<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="PostRolAdapter"
        active="${PostRolAdapter.Active}"
        description="">

        <Receiver name="PostRolAdapter">
            <JavaListener name="PostRolAdapter"/>
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit path="EXIT" state="SUCCESS"/>
                <Exit path="EXCEPTION" state="ERROR"/>
            </Exits>

            <XsltPipe
                name="AddZaakUrl"
                removeNamespaces="true"
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_LK01/xsl/AddZaakUrl.xsl"
                >
                <Param name="ZaakUrl" sessionKey="ZaakUrl"/>
                <Forward name="success" path="XmlToJson"/>
            </XsltPipe>
            <!-- <FixedResultPipe name="PutPlaceholder_ZaakUrl"
                substituteVars="true"
                returnString="test">
                <Param name="ZaakUrl"/>
                <forward name="success" path="XmlToJson"/>
            </FixedResultPipe> -->

            <!-- <PutInSessionPipe name="PutPlaceholder_ZaakUrl"
               >
                <Param name="Url">
                   <Param name="Placeholder_ZaakUrl" sessionKey="ZaakUrl"/>
                </Param>
                <Forward name="success" path="XmlToJson" />
            </PutInSessionPipe> -->

			<!-- <ReplacerPipe name="AddZaakUrl"
                find="Placeholder_ZaakUrl" 
                replace="$ZaakUrl"
                >
                <Param name="ZaakUrl" sessionKey="ZaakUrl"/>
                <Forward name="success" path="XmlToJson"/>
            </ReplacerPipe> -->

            <JsonPipe name="XmlToJson"
                direction="XML2JSON">
                <Forward name="success" path="PostZgwRol"/>
            </JsonPipe>

            <SenderPipe name="PostZgwRol" 
                storeResultInSessionKey="PostZgwRolResult">
				<HttpSender 
					name="PostZgwRolSender" 
					methodType="POST"
					headersParams="Authorization,Accept-Crs"
					url="${zgw.baseurl}${zgw.endpoint.rol}"
                    contentType="application/json"
                    timeout="${creeerZaak.timeout}"
                    maxExecuteRetries="5"
				/>
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Content-Crs"  value="EPSG:4326"/>
                <Param name="Authorization" value="Bearer ${JwtToken}"/>
                <Forward name="success" path="EXIT" />
			</SenderPipe>
        </Pipeline>
    </Adapter>
</Module>