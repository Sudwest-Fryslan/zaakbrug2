<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="GetStatusTypeByZaakTypeAndOmschrijving"
        active="${GetStatusTypeByZaakTypeAndOmschrijving.Active}"
        description="">

        <Receiver name="GetStatusTypeByZaakTypeAndOmschrijving">
            <JavaListener name="GetStatusTypeByZaakTypeAndOmschrijving"/>
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit path="EXIT" state="SUCCESS"/>
                <Exit path="EXCEPTION" state="ERROR"/>
            </Exits>

            <SenderPipe
                name="CallGetStatusTypeByZaakType"
                storeResultInSessionKey="GetStatusTypeByZaakTypeResult">
                <IbisLocalSender
                    name="CallGetStatusTypeByZaakTypeSender"
                    javaListener="GetZgwStatusTypes">
                    <Param name="ZaakTypeUrl" sessionKey="ZaakTypeUrl"/>
                </IbisLocalSender>
                <Forward name="success" path="GetZgwStatusTypeByOmschrijving"/>
            </SenderPipe>
    <!-- How to handle Volgnummer and if no statustype is found with the statusOmschrijving -->
            <XsltPipe
                name="GetZgwStatusTypeByOmschrijving"
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_LK01/xsl/GetZgwStatusTypeByOmschrijving.xsl"
                >
                <Param name="Omschrijving" sessionKey="Omschrijving"/>
                <Forward name="success" path="CheckForGetStatusTypeResult"/>
            </XsltPipe>

            <XmlIfPipe name="CheckForGetStatusTypeResult"
                xpathExpression="string-length(statusType) > 0"
                >
                <Forward name="then" path="EXIT"/>
                <Forward name="else" path="EXCEPTION"/>
            </XmlIfPipe>
        </Pipeline>
    </Adapter>
</Module>