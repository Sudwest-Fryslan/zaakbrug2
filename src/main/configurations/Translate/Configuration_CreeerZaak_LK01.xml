<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../ibisdoc.xsd">
    <Adapter name="CreeerZaak_Lk01"
        active="${CreeerZaak_Lk01.Active}"
        description="">

        <Receiver name="CreeerZaak_Lk01">
            <WebServiceListener name="CreeerZaak_Lk01" address="${address.CreeerZaak_LK01}"/>
        </Receiver>

        <Pipeline>
            <SenderPipe
                name="CallGetZgwZaakType"
                storeResultInSessionKey="GetZaakTypeResult">
                <IbisLocalSender
                    name="CallGetZgwZaakTypeSender"
                    javaListener="GetZgwZaakType">
                    <Param name="ZaakTypeCode" xpathExpression="/Envelope/Body/zakLk01/object/isVan/gerelateerde/code"/>
                </IbisLocalSender>
                <Forward name="success" path="GetRsin"/>
            </SenderPipe>

            <XmlIfPipe name="CheckForGetZgwZaakTypeResult"
                xpathExpression="count(zgwZaakType/ZaakType) = 0"
                thenForwardName="error"
                elseForwardName="GetRsinFromLocalFS">
            </XmlIfPipe>

            <SenderPipe name="GetRsinFromLocalFS">
                <IbisLocalSender
                    name="CallImportFromLocalFS"
                    javaListener="ImportFromLocalFS">
                    <Param name="FileName" value="${FilePath_1}"/>                   
                </IbisLocalSender>
                <Forward name="success" path="GetRsin"/>
            </SenderPipe>

            <XsltPipe
                name="GetRsin"
                getInputFromSessionKey="originalMessage"
                storeResultInSessionKey="GetRsinResult"
                removeNamespaces="true"
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_LK01/xsl/GetRsin.xsl"
                >
                <Param name="heeftBetrekkingOp" xpathExpression="/Envelope/Body/zakLk01/object/heeftBetrekkingOp"/>
                <Forward name="success" path="CallGetZgwRolType"/>
            </XsltPipe>

            

            <SenderPipe
                name="CallGetZgwRolType"
                storeResultInSessionKey="GetRolTypeResult">
                <IbisLocalSender
                    name="CallGetZgwRolTypeSender"
                    javaListener="GetZgwRolTypeByZaakType">
                    <Param name="ZaakTypeUrl" xpathExpression="$GetZaakTypeResult/root/results/url">
                        <Param name="GetZaakTypeResult" sessionKey="GetZaakTypeResult" type="DOMDOC"/>
                    </Param>
                </IbisLocalSender>
                <Forward name="success" path="SetRoles"/>
            </SenderPipe>   

            <XsltPipe
                name="SetRoles"
                getInputFromSessionKey="originalMessage"
                storeResultInSessionKey="RolBody"
                removeNamespaces="true"
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_LK01/xsl/SetRoles.xsl"
                >
                <Forward name="success" path="RolMappingIterator"/>
            </XsltPipe>

            <ForEachChildElementPipe name="RolMappingIterator"
                storeResultInSessionKey="RolMappingResults"
                elementXPathExpression="/roles/role">
                <IbisLocalSender
                    name="CallAddRolToZgw"
                    javaListener="AddRolToZgw">
                    <Param name="GetRolTypeResult" sessionKey="GetRolTypeResult" type="DOMDOC"/>
                    <Param name="ZaaktypeUrl" xpathExpression="$GetZaaktypeResult/root/results/url">
                        <Param name="GetZaaktypeResult" sessionKey="GetZaaktypeResult" type="DOMDOC"/>
                    </Param>
                </IbisLocalSender>
                <Forward name="success" path="CreateZaakBody"/>
            </ForEachChildElementPipe>
<!-- Post zaak -->
            <XsltPipe
                name="CreateZaakBody"
                getInputFromSessionKey="originalMessage"
                storeResultInSessionKey="ZaakBody"
                removeNamespaces="true"
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_LK01/xsl/CreateZaakBody.xsl"
                >
                <Param name="GetZaakTypeResult" sessionKey="GetZaakTypeResult" type="DOMDOC"/>
                <Param name="GetRsinResult" sessionKey="GetRsinResult" type="DOMDOC"/>
                <Forward name="success" path="ConvertZaakBody"/>
            </XsltPipe>

            <JsonPipe name="ConvertZaakBody"
                direction="xml2json">
                <forward name="success" path="PostZgwZaak"/>
            </JsonPipe>

            <SenderPipe name="PostZgwZaak">
				<HttpSender 
					name="PostZgwZaakSender" 
					methodType="POST"
					headersParams="Authorization,Accept-Crs"
					url="${zgw.baseurl}${zgw.endpoint.zaak}"
                    contentType="application/json"
				/>
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Content-Crs"  value="EPSG:4326" />
                <!-- <Param name="Authorization" xpathExpression="concat('Bearer ', $Token)" >
                    <Param name="Token" value="${JwtToken}" />
                </Param> -->
                <Forward name="success" path="ConvertPostZaakResult" />
			</SenderPipe>

            <JsonPipe name="ConvertPostZaakResult"
                storeResultInSessionKey="PostZgwZaakResult">
                <forward name="success" path="PostRolIterator"/>
            </JsonPipe>
<!-- Post zaak end -->
            <ForEachChildElementPipe name="PostRolIterator"
                getInputFromSessionKey="RolMappingResults"
                elementXPathExpression="/results/result">
                <IbisLocalSender
                    name="CallPostRol"
                    javaListener="PostRolAdapter">
                    <Param name="ZaakUrl" xpathExpression="$PostZgwZaakResult/root/results/url">
                        <Param name="PostZgwZaakResult" sessionKey="PostZgwZaakResult" type="DOMDOC"/>
                    </Param>
                </IbisLocalSender>
                <Forward name="success" path="CheckForHeeftBetrekkingOpAndere"/>
            </ForEachChildElementPipe>

            <XmlIfPipe name="CheckForHeeftBetrekkingOpAndere"
                getInputFromSessionKey="originalMessage"
                xpathExpression="string-length(/Envelope/Body/zakLk01/object/heeftBetrekkingOpAndere) > 0"
                thenForwardName="AndereZaakIterator"
                elseForwardName="GetStatusTypesByZaakType">
            </XmlIfPipe>

            <ForEachChildElementPipe name="AndereZaakIterator"
                getInputFromSessionKey="originalMessage"
                elementXPathExpression="/Envelope/Body/zakLk01/object/heeftBetrekkingOpAndere">
                <IbisLocalSender
                    name="CallAndereZaakAdapter"
                    javaListener="AndereZaakAdapter">
                    <Param name="PostZgwZaakResult" sessionKey="PostZgwZaakResult" type="DOMDOC"/>
                </IbisLocalSender>
                <Forward name="success" path="CallSetResultaatAndStatus"/>
            </ForEachChildElementPipe>

            <SenderPipe
                name="CallSetResultaatAndStatus"
                getInputFromSessionKey="originalMessage"
                storeResultInSessionKey="SetResultaatAndStatusResult">
                <IbisLocalSender
                    name="CallSetResultaatAndStatusSender"
                    javaListener="SetResultaatAndStatus">
                    <Param name="GetZaakTypeResult" sessionKey="GetZaakTypeResult" type="DOMDOC"/>                   
                    <Param name="ZaakUrl" xpathExpression="$PostZgwZaakResult/root/url">
                        <Param name="PostZgwZaakResult" sessionKey="PostZgwZaakResult" type="DOMDOC"/>
                    </Param>
                </IbisLocalSender>
                <Forward name="success" path="EXIT"/>
            </SenderPipe>

            <Exit path="EXIT" state="success"/>
            <Exit path="Exception" state="error"/>
        </Pipeline>
    </Adapter>
</Module>