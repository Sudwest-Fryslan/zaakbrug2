<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../ibisdoc.xsd">
    <Adapter name="PostStatusAdapter"
        active="${PostStatusAdapter.Active}"
        description="">

        <Receiver name="PostStatusAdapter">
            <JavaListener name="PostStatusAdapter"/>
        </Receiver>

        <Pipeline>
            <JsonPipe name="XmlToJson"
                direction="xml2json">
                <forward name="success" path="PostZgwStatus"/>
            </JsonPipe>

            <SenderPipe name="PostZgwStatus" 
                storeResultInSessionKey="PostZgwStatusResult">
				<HttpSender 
					name="PostZgwStatusSender" 
					methodType="POST"
					headersParams="Authorization,Accept-Crs"
					url="${zgw.baseurl}${zgw.endpoint.status}"
                    contentType="application/json"
                    timeout="${creeerZaak.timeout}"
                    maxExecuteRetries="5"
				/>
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Content-Crs"  value="EPSG:4326"/>
                <Param name="Authorization" value="Bearer ${JwtToken}"/>
                <Forward name="success" path="EXIT" />
			</SenderPipe>

            <Exit path="EXIT" state="success"/>
            <Exit path="Exception" state="error"/>
        </Pipeline>
    </Adapter>
</Module>